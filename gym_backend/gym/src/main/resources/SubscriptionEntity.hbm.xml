<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.models.SubscriptionEntity" table="subscription" schema="pi_ag">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="planName">
            <column name="plan_name" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="cost">
            <column name="cost" sql-type="decimal(10,2)" precision="10" scale="2"/>
        </property>
    </class>
</hibernate-mapping>